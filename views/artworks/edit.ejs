<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Artwork | FineArt Gallery</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      font-family: sans-serif;
      margin: 0;
      padding: 0;
      background: #f5f5f5;
    }

    .navbar {
      width: 100%;
      padding: 0.75rem 1.5rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: rgba(0, 0, 0, 0.45);
      box-sizing: border-box;
    }

    .navbar a,
    .navbar button {
      color: #fff;
      background: rgba(234, 232, 232, 0.667);
      border: none;
      padding: 0.5rem 1rem;
      border-radius: 8px;
      text-decoration: none;
      font-size: 1rem;
      cursor: pointer;
    }

    .container {
      display: flex;
      gap: 30px;
      max-width: 1000px;
      margin: 40px auto;
      padding: 10px;
    }

    .left {
      flex: 1;
    }

    .left img {
      max-width: 100%;
      border-radius: 8px;
    }

    .right {
      flex: 1;
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    label {
      font-weight: bold;
    }

    input[type="text"],
    textarea,
    input[type="file"] {
      width: 100%;
      padding: 0.5rem;
      border-radius: 5px;
      border: 1px solid #ccc;
      font-size: 1rem;
      box-sizing: border-box;
    }

    button {
      padding: 0.5rem 1rem;
      border-radius: 5px;
      border: none;
      background: #333;
      color: #fff;
      cursor: pointer;
      font-size: 1rem;
    }

    .owner-buttons {
      display: flex;
      gap: 10px;
      margin-top: 10px;
    }

    .owner-buttons a,
    .owner-buttons button {
      padding: 0.5rem 1rem;
      border-radius: 5px;
      border: none;
      cursor: pointer;
      font-size: 0.95rem;
    }

    .owner-buttons a {
      background-color: #1f1f1f;
      color: #fff;
      text-decoration: none;
    }

    .owner-buttons button.save-btn {
      background-color: #28a745;
      color: #fff;
    }

    .owner-buttons button.delete-btn {
      background-color: #ff4c4c;
      color: #fff;
    }

    .owner-buttons a:hover {
      background-color: #555;
    }

    .owner-buttons button.save-btn:hover {
      background-color: #218838;
    }

    .owner-buttons button.delete-btn:hover {
      background-color: #dc3545;
    }
  </style>
</head>

<body>
<%- include('../partials/_navbar') %>
  <!-- Navbar -->
  <nav class="navbar">
    <h1>FineArt Gallery</h1>
    <div>
      <a href="/artworks">‚¨Ö Back to Artworks</a>
      <% if (user) { %>
        <form action="/auth/sign-out" method="POST" style="display:inline;">
          <button type="submit">üö™ Sign Out</button>
        </form>
      <% } else { %>
        <a href="/auth/sign-in">üîë Sign In</a>
      <% } %>
    </div>
  </nav>

  <!-- Edit Container -->
  <div class="container">
    <!-- Left: Artwork Image -->
    <div class="left">
      <% if (artwork.imagePath) { %>
        <img src="<%= artwork.imagePath %>" alt="<%= artwork.title %>">
      <% } %>
    </div>

    <!-- Right: Form & Info -->
    <div class="right">
      <h1>Edit Artwork</h1>
      <form id="editForm" action="/artworks/<%= artwork._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <label>Title:</label>
        <input type="text" name="title" value="<%= artwork.title %>" required>

        <label>Artist:</label>
        <input type="text" name="artist" value="<%= artwork.artist %>">

        <label>Description:</label>
        <textarea name="description"><%= artwork.description %></textarea>

        <label>New Image (optional):</label>
        <input type="file" name="image">
      </form>

      <% if (user && artwork.ownerId.equals(user._id)) { %>
        <div class="owner-buttons">
          <button id="editBtn" type="button">‚úèÔ∏è Edit</button>
          <button id="saveBtn" type="button" class="save-btn">üíæ Save</button>

          <form action="/artworks/<%= artwork._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit" class="delete-btn">üóëÔ∏è Delete</button>
          </form>
        </div>
      <% } %>
    </div>
  </div>

  <script>
    const editForm = document.getElementById('editForm');
    const saveBtn = document.getElementById('saveBtn');
    const editBtn = document.getElementById('editBtn');

    // Dugme Edit aktivira polja
    editBtn?.addEventListener('click', () => {
      editForm.querySelectorAll('input, textarea').forEach(el => el.disabled = false);
      alert('Form is now editable!');
    });

    // Dugme Save ≈°alje AJAX PUT zahtev
    saveBtn?.addEventListener('click', async () => {
      const formData = new FormData(editForm);
      try {
        const response = await fetch(editForm.action, {
          method: 'POST', // PUT preko _method
          body: formData
        });

        if (response.ok) {
          alert('Artwork saved successfully!');
        } else {
          alert('Error saving artwork.');
        }
      } catch (err) {
        console.error(err);
        alert('Error sending request.');
      }
    });
  </script>

</body>

</html>
