<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FineArt Gallery</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      margin: 0;
      background: #f7f7f7;
      font-family: 'Open Sans', sans-serif;
      color: #333;
      overflow-x: hidden;
    }

    /* === NAVBAR === */
    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background-color: #1f1f1f;
      color: white;
      padding: 15px 40px;
    }

    .navbar .left {
      flex: 1;
      text-align: left;
    }

    .navbar .center {
      flex: 1;
      text-align: center;
    }

    .navbar .right {
      flex: 1;
      text-align: right;
    }

    .navbar a, .navbar button {
      color: white;
      text-decoration: none;
      font-weight: bold;
      background: none;
      border: none;
      font-size: 1em;
      cursor: pointer;
      transition: color 0.3s ease;
    }

    .navbar a:hover, .navbar button:hover {
      color: #ffb347;
    }

    .user-info {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      justify-content: flex-end;
    }

    /* === SLIDER === */
    .slider {
      width: 100%;
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      overflow: hidden;
    }

    .slide {
      display: none;
      align-items: center;
      justify-content: center;
      gap: 60px;
      padding: 40px;
      width: 100%;
      height: 100%;
      box-sizing: border-box;
      position: relative;
    }

    .slide.active {
      display: flex;
    }

    .slide img {
      width: 90vw;
      max-width: 1300px;
      max-height: 80vh;
      object-fit: contain;
      border-radius: 12px;
      box-shadow: 0 4px 25px rgba(0, 0, 0, 0.3);
      transition: transform 0.3s ease;
    }

    .slide img:hover {
      transform: scale(1.02);
    }

    .art-info {
      max-width: 350px;
      text-align: left;
      position: absolute;
      top: 10%;
      right: 8%;
    }

    .art-info h3 {
      font-family: 'Playfair Display', serif;
      font-size: 1.8rem;
      margin-bottom: 10px;
      color: #222;
    }

    .art-info p {
      font-size: 1.1rem;
      color: #555;
      margin-bottom: 15px;
    }

    /* Dugmad Edit i Delete */
    .actions {
      position: absolute;
      bottom: 8%;
      right: 8%;
      display: flex;
      gap: 12px;
    }

    .actions a, .actions button {
      background: #1f1f1f;
      color: white;
      border: none;
      padding: 10px 18px;
      border-radius: 8px;
      cursor: pointer;
      text-decoration: none;
      font-size: 1em;
      transition: background 0.3s;
    }

    .actions a:hover, .actions button:hover {
      background: #ffb347;
      color: black;
    }

    /* Strelice */
    .prev, .next {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(0, 0, 0, 0.5);
      color: white;
      border: none;
      font-size: 2.5rem;
      padding: 0.5rem 1rem;
      cursor: pointer;
      border-radius: 50%;
      transition: background 0.3s;
      z-index: 10;
    }

    .prev:hover, .next:hover {
      background: rgba(0, 0, 0, 0.8);
    }

    .prev { left: 30px; }
    .next { right: 30px; }
  </style>
</head>
<body>

  <!-- NAVBAR -->
  <nav class="navbar">
    <div class="left">
      <a href="/">üè† Home</a>
    </div>

    <div class="center">
      <a href="/artworks/new">üì§ Upload Picture</a>
    </div>

    <div class="right">
      <% if (user) { %>
        <div class="user-info">
          <span>Hi, <%= user.username %>!</span>
          <form method="POST" action="/auth/sign-out" style="display:inline;">
            <button type="submit">üö™ Sign Out</button>
          </form>
        </div>
      <% } else { %>
        <a href="/auth/sign-in">üîë Sign In</a>
      <% } %>
    </div>
  </nav>

  <!-- SLIDER -->
  <div class="slider">
    <% if (artworks && artworks.length > 0) { %>
      <% artworks.forEach((artwork, index) => { %>
        <div class="slide <%= index === 0 ? 'active' : '' %>">
          <img src="<%= artwork.imagePath %>" alt="<%= artwork.title %>">

          <div class="art-info">
            <h3><%= artwork.title %></h3>
            <p><%= artwork.description %></p>
            <p><em>by <%= artwork.artist %></em></p>
          </div>

          <% if (user && user.username === artwork.artist) { %>
            <div class="actions">
              <a href="/artworks/<%= artwork._id %>/edit">‚úèÔ∏è Edit</a>
              <form method="POST" action="/artworks/<%= artwork._id %>?_method=DELETE" style="display:inline;">
                <button type="submit">üóëÔ∏è Delete</button>
              </form>
            </div>
          <% } %>
        </div>
      <% }) %>

      <button class="prev">&#10094;</button>
      <button class="next">&#10095;</button>

    <% } else { %>
      <p style="text-align:center;">No artworks uploaded yet.</p>
    <% } %>
  </div>

  <!-- JS za listanje -->
  <script>
    const slides = document.querySelectorAll('.slide');
    let currentSlide = 0;

    function showSlide(index) {
      slides.forEach((slide, i) => slide.classList.toggle('active', i === index));
    }

    document.querySelector('.next').addEventListener('click', () => {
      currentSlide = (currentSlide + 1) % slides.length;
      showSlide(currentSlide);
    });

    document.querySelector('.prev').addEventListener('click', () => {
      currentSlide = (currentSlide - 1 + slides.length) % slides.length;
      showSlide(currentSlide);
    });
  </script>

</body>
</html>
