<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FineArt Gallery</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      margin: 0;
      background: #f7f7f7;
      font-family: 'Open Sans', sans-serif;
      color: #333;
      overflow-x: hidden;
    }

    /* === NAVBAR === */
    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background-color: #1f1f1f;
      color: white;
      padding: 15px 40px;
    }

    .navbar a, .navbar button {
      color: white;
      text-decoration: none;
      font-weight: bold;
      background: none;
      border: none;
      font-size: 1em;
      cursor: pointer;
      transition: color 0.3s ease;
    }

    .navbar a:hover, .navbar button:hover {
      color: #ffb347;
    }

    .user-info {
      display: inline-flex;
      align-items: center;
      gap: 12px;
    }

    /* === SLIDER === */
    .slider {
      width: 100%;
      height: calc(100vh - 80px);
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      overflow: hidden;
    }

    .slide {
      display: none;
      align-items: center;
      justify-content: center;
      gap: 60px;
      width: 100%;
      height: 100%;
      padding: 40px 60px;
      box-sizing: border-box;
    }

    .slide.active {
      display: flex;
    }

    /* Slika lijevo */
    .art-image {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 90vh;
      max-width: 900px;
    }

    .art-image img {
      width: 400%;
      height: 500%;
      object-fit: contain;
      border-radius: 10px;
      box-shadow: 0 4px 25px rgba(0, 0, 0, 0.3);
    }

    /* Dugmad Edit i Delete */
    .actions {
      position: absolute;
      bottom: 15px;
      right: 20px;
      display: flex;
      gap: 10px;
      margin-right: 40px;
    }

    .actions a, .actions button {
      background: #1f1f1f;
      color: white;
      border: none;
      padding: 10px 18px;
      border-radius: 8px;
      cursor: pointer;
      text-decoration: none;
      font-size: 0.95em;
      transition: background 0.3s;
    }

    .actions a:hover, .actions button:hover {
      background: #ffb347;
      color: black;
    }

    /* Opis desno */
    .art-info {
  flex: 1;
  text-align: left;
  padding: 20px;
  max-width: 300px;
  overflow-y: auto;

  width: 20ch;        /* ≈°irina reda oko 30 karaktera */
  word-wrap: break-word; /* ako reƒç prelazi liniju, prelama se */
  white-space: pre-wrap;   /* dozvoli prelamanje teksta */
}







    .art-info h3 {
      font-family: 'Playfair Display', serif;
      font-size: 2rem;
      margin-bottom: 10px;
      color: #111;
    }

    .art-info p {
      font-size: 1.1rem;
      color: #444;
      margin-bottom: 12px;
    }

    /* Strelice */
    .prev, .next {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(0, 0, 0, 0.5);
      color: white;
      border: none;
      font-size: 2.5rem;
      padding: 0.5rem 1rem;
      cursor: pointer;
      border-radius: 50%;
      transition: background 0.3s;
      z-index: 10;
    }

    .prev:hover, .next:hover {
      background: rgba(0, 0, 0, 0.8);
    }

    .prev { left: 30px; }
    .next { right: 30px; }
  </style>
</head>
<body>
  <%- include('../partials/_navbar') %>

  <!-- NAVBAR -->
  <nav class="navbar">
    <div class="left">
      <a href="/">üè† Home</a>
    </div>

    <div class="center">
      <a href="/artworks/new">üì§ Upload Picture</a>
    </div>

    <div class="right">
      <% if (user) { %>
        <div class="user-info">
          <span>Hi, <%= user.username %>!</span>
          <form method="POST" action="/auth/sign-out" style="display:inline;">
            <button type="submit">üö™ Sign Out</button>
          </form>
        </div>
      <% } else { %>
        <a href="/auth/sign-in">üîë Sign In</a>
      <% } %>
    </div>
  </nav>

  <!-- SLIDER -->
  <div class="slider">
    <% if (artworks && artworks.length > 0) { %>
      <% artworks.forEach((artwork, index) => { %>
        <div class="slide <%= index === 0 ? 'active' : '' %>">
          
          <!-- Slika lijevo -->
          <div class="art-image">
            <img src="<%= artwork.imagePath %>" alt="<%= artwork.title %>">
            
            <% if (user && artwork.ownerId.equals(user._id)) { %>
  <div class="actions">
    <a href="/artworks/<%= artwork._id %>/edit">‚úèÔ∏è Edit</a>
    <form method="POST" action="/artworks/<%= artwork._id %>?_method=DELETE" style="display:inline;">
      <button type="submit">üóëÔ∏è Delete</button>
    </form>
  </div>
<% } %>

          </div>

          <!-- Opis desno -->
          <div class="art-info">
            <h3><%= artwork.title %></h3>
            <p><%= artwork.description %></p>
            <p><em>by <%= artwork.artist %></em></p>
          </div>
        </div>
      <% }) %>

      <button class="prev">&#10094;</button>
      <button class="next">&#10095;</button>

    <% } else { %>
      <p style="text-align:center;">No artworks uploaded yet.</p>
    <% } %>
  </div>

  <!-- JS za listanje -->
  <script>
    const slides = document.querySelectorAll('.slide');
    let currentSlide = 0;

    function showSlide(index) {
      slides.forEach((slide, i) => slide.classList.toggle('active', i === index));
    }

    document.querySelector('.next').addEventListener('click', () => {
      currentSlide = (currentSlide + 1) % slides.length;
      showSlide(currentSlide);
    });

    document.querySelector('.prev').addEventListener('click', () => {
      currentSlide = (currentSlide - 1 + slides.length) % slides.length;
      showSlide(currentSlide);
    });
  </script>

</body>
</html>

